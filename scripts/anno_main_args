parser.add_argument('--config', help='Path to configuration YAML file', required=False, default=None)
parser.add_argument('-i', '--input_vcf', help='Input VCF file', required=False)
parser.add_argument('-p', '--ped_file', help='Pedigree file', required=False)
parser.add_argument('-f', '--fam_name', help='Family name', required=False)
parser.add_argument('-a', '--assembly', help='Assembly version (hg19/hg38)', required=False)
parser.add_argument('-r', '--ref_genome', help='Reference genome FASTA', required=False)
parser.add_argument('-o', '--output_dir', help='Output directory', required=False)
parser.add_argument('-t', '--threads', type=int, help='Number of threads', required=False)
parser.add_argument('--af_cutoff', type=float, help='Allele frequency cutoff', required=False)
parser.add_argument('--gnomad_vcf_chrX', help='Path to the gnomAD VCF file for chromosome 1', required=False)
parser.add_argument('--clinvar_vcf', help='Path to the ClinVar VCF file', required=False)
parser.add_argument('--vep_cache_dir', help='VEP cache directory', required=False)
parser.add_argument('--vep_plugins_dir', help='Path to the VEP plugins directory', required=False)
parser.add_argument('--vep_plugins_cachedir', help='Path to the VEP plugin cache directory', required=False)
parser.add_argument('--utr_annotator_file', help='UTRAnnotator plugin cache file', required=False)
parser.add_argument('--loeuf_prescore', help='LOEUF plugin cache file', required=False)
parser.add_argument('--alphamissense_prescore', help='AlphaMissense plugin cache file', required=False)
parser.add_argument('--spliceai_snv_prescore', help='SpliceAI SNV plugin cache file', required=False)
parser.add_argument('--spliceai_indel_prescore', help='SpliceAI indel plugin cache file', required=False)
parser.add_argument('--primateai_prescore', help='PrimateAI plugin cache file', required=False)
parser.add_argument('--conversation_file', help='Conservation plugin cache file', required=False)
parser.add_argument('--conda_env_yaml', help='Conda environment YAML file', required=False)
